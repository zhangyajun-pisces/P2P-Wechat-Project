/* pages/product/search/search.wxss */
page {
  height: 100%;
  background-color: #f8f8f8;
}
.container {
  height: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding-top:45px;
  box-sizing: border-box;
}

.search-header {
  position: fixed;
  top: 0;
  width: 100%;
  height: 91rpx;
  display: flex;
  background: #fff;
  border-bottom: 1px solid rgba(0, 0, 0, 0.15);
  padding: 0 31.25rpx;
  font-size: 29rpx;
  color: #333;
}

.search-header .input-box {
  position: relative;
  margin-top: 16rpx;
  float: left;
  width: 75%;
  border-radius: 50px;
  flex: 1;
  height: 59rpx;
  line-height: 59rpx;
  padding: 0 20rpx;
  background: #f4f4f4;
}
.search-header .srarch {
  /* margin-top: 24rpx;
  margin-left: 31rpx;
  margin-right: 6rpx; */
  padding: 0 30rpx;
  margin: 0 20rpx;
  margin-top: 15rpx;
  background-color: #3699FF;
  border-radius: 50rpx;
  color: #fff;
  /* width: 58px; */
  height: 25px;
  line-height: 25px;
  float: right;
}
.search-header .icon {
  position: absolute;
  top: 14rpx;
  left: 20rpx;
  width: 31rpx;
  height: 31rpx;
}

.search-header .del {
  position: absolute;
  top: 3rpx;
  right: 10rpx;
  width: 53rpx;
  height: 53rpx;
  z-index: 10;
}

.search-header .keywrod {
  position: absolute;
  top: 0;
  left: 40rpx;
  width: 506rpx;
  height: 59rpx;
  padding-left: 30rpx;
}

.search-header .right {
  margin-top: 24rpx;
  margin-left: 31rpx;
  margin-right: 6rpx;
  width: 58rpx;
  height: 43rpx;
  line-height: 43rpx;
  float: right;
}

.no-search {
  height: auto;
  overflow: hidden;
}

.search-keywords {
  background: #fff;
  width: 750rpx;
  height: auto;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.search-keywords .h {
  padding: 0 31.25rpx;
  height: 93rpx;
  line-height: 93rpx;
  width: 95%;
  color: #999;
  font-size: 29rpx;
}

.search-keywords .title {
  display: block;
  width: 120rpx;
  float: left;
}

.search-keywords .icon {
  margin-top: 19rpx;
  float: right;
  display: block;
  /* margin-left: 450rpx; */
  height: 55rpx;
  width: 55rpx;
}

.search-keywords .b {
  width: 750rpx;
  height: auto;
  overflow: hidden;
  padding-left: 31.25rpx;
}

.search-keywords .item {
  display: inline-block;
  width: auto;
  border-radius: 10px;
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 20rpx;
  border: 1px solid #999;
  margin: 0 31.25rpx 31.25rpx 0;
  font-size: 24rpx;
  color: #333;
}

.search-keywords .item.active {
  color: #b4282d;
  border: 1px solid #b4282d;
}

.search-result-empty {
  width: 100%;
  height: 100%;
  padding-top: 300rpx;
}

.search-result-empty .icon {
  margin: 0 auto;
  display: block;
  width: 240rpx;
  height: 240rpx;
}

.search-result-empty .text {
  display: block;
  width: 100%;
  height: 40rpx;
  font-size: 28rpx;
  text-align: center;
  color: #999;
}

.content{
  background: #f8f8f8;
  padding: 0px 10px 10px 10px;
  box-sizing: border-box;
}
.contentItem{
  width:100%;
  height:120px;
  padding: 5px;
  margin-bottom:10px;
  box-sizing: border-box;
  background: #fff;
}
.contentItem .title{
  width:100%;
  height:30px;
  vertical-align: middle;
  font-size: 14px;
}
.contentItem .info{
  width:100%;
  line-height: 20px;
  color: #bbb;
}
.contentItem .info image{
  width:12px;
  height:12px;
  margin:0px 2px;
}
.contentItem .bottom{
  display: inline-flex;
  width:100%;
  line-height: 40px;
}
.contentItem .bottom view{
  width:100%;
  text-align: center;
}
.contentItem .bottom view:first-child{
  text-align: left;
  color: red;
}
.bottom view:last-child{
  text-align: right;
}
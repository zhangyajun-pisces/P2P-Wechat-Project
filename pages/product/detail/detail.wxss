/* pages/product/detail/detail.wxss */
page{
  height:100%;
  background: #f4f4f4;
}
.content{
  width:100%;
  height:auto;
  padding: 10px;
  margin-top:10px;
  box-sizing: border-box;
  background: #fff;
  font-size: 12px;
}
.content .title{
  width:100%;
  height:30px;
  vertical-align: middle;
  font-size: 14px;
}
.content .tipTitle{
  font-size: 14px;
  font-weight: 600;
}
.content  .title .icon{
  display: inline-block;
  height:14px;
  width:2px;
  margin-right:5px;
  background: #3699FF;
  position:relative;
  top:2px;
}
.content .info{
  width:100%;
  line-height: 20px;
  color: #bbb;
  margin:10px 0px;

}
.content .info image{
  width:12px;
  height:12px;
  margin:0px 2px;
}
.content .info text{
  color:red;
}

.content .row{
  display: flex;
  /* padding: 6px 0 15px 0; */
  margin: 0px;
  border-bottom: 1px solid #f4f4f4;
}
.col-lg-5 {
  width: 100%;
  /* height: auto; */
  margin:10px;
  padding-top:10rpx;
}


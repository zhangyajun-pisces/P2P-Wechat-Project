.tabs {
  height: 40px;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 40px;
  background: #fff;
  border-top: 1rpx solid #f4f4f4;
  font-size: 16px;
  white-space: nowrap;
  text-align: center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.tab-item {
  display: inline-block;
  height: 40px;
  line-height: 40px;
  width: 33%;
  text-align: center;
  box-sizing: border-box;
}
.tab-item.active {
  color: #3d8dfd;
  font-weight: 700;
  border-bottom: 7px solid #3d8dfd;
}
.tab-content {
  background: #f8f8f8;
  padding: 50px 0 10rpx 0;
  box-sizing: border-box;
}

.contentItem {
  width: 100%;
  min-height: 150rpx;
  padding: 15rpx;
  margin-bottom: 10px;
  box-sizing: border-box;
  background: #fff;
}

.scoll-h{
  height: 100%;
}
 .row{
  display: flex;
  padding: 10rpx 0 ;
  margin: 0px;
  /* border-bottom: 1px solid #f4f4f4; */
}

.col-3 {
  width: 33.3%;
  height: auto;
  padding-top:10rpx;
}
.col-5 {
  width: 50%;
  height: auto;
  padding-top:10rpx;
}
.right{
  flex: 1;
  text-align: left;
  padding-top: 10rpx;
}
.title {
  width: 100%;
  height: 30px;
  vertical-align: middle;
  font-size: 14px;
}

.info {
  width: 100%;
  line-height: 20px;
  color: #bbb;
}

.bottom {
  width: 100%;
  line-height: 40px;
} 


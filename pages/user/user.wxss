page {
  background-color: #F8F8F8;
}
.top{
  width: 100%;
  height: 200rpx;
  position: relative;
  background-color: #3699FF;
  border-bottom-left-radius: 45rpx;
  border-bottom-right-radius: 45rpx;
}
.top_info{
  padding: 20rpx;
  box-sizing: border-box;
  width: 100%;
  display: flex;
  align-items: center;
  position: absolute;
  bottom: 50rpx;
}
.top_info_avatar image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}
.top_info_main{
  color: #fff;
  line-height: 2;
  flex: 1;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.white-txt{
  color: white;
}
.top_info_main_atte{
  background-color: rgba(0, 0, 0, 0.103);
  display: inline-block;
  border-radius: 40rpx;
  padding: 0rpx 10rpx;
  font-size: 20rpx;
  margin-left: 20rpx;
}
.no_auth{
  background-color: red;
  display: inline-block;
  border-radius: 40rpx;
  padding: 0rpx 10rpx;
  font-size: 20rpx;
  margin-left: 20rpx;
}

.top_info_set  image{
  width: 40rpx;
  height: 40rpx;
}
.news{
  width: 95%;
  z-index: 10;
  background-color: #fff;
  margin: auto;
  /* padding: 30rpx; */
  transform: translateY(-30rpx);
  margin-bottom: 30rpx;
}
.news_title{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 30rpx;
  border-bottom: 1px solid #f6f6f6;
}
.news_title_lf{
  position: relative;
}
.news_title_lf::after{
  content: " ";
  width: 2px;
  height: 14px;
  position: absolute;
  background-color: #3699FF;
  left: -10rpx;
  top: 3px;
}
.news_title_rt image{
  margin-right: 10rpx;
  width: 10rpx;
  height: 20rpx;
}
.news_main_top{
  line-height: 1.4;
  /* margin-top: 20rpx; */
  padding: 30rpx;
}
.news_main_bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* margin-top: 20rpx;
  margin-bottom: 20rpx; */
}
.news_main_bottom_lf{
  font-size: 24rpx;
  padding: 10rpx 30rpx;
}
.news_main_bottom_rt{
  font-size: 24rpx;
  color: #FE4B4B;
  padding: 10rpx 30rpx;
}

.nav_list{
  width: 95%;
  background-color: #fff;
  margin: auto;
  padding: 30rpx;
  transform: translateY(-30rpx)
}
.nav_list_title{
  position: relative;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f6f6f6;
}
.nav_list_title::after{
  content: " ";
  width: 2px;
  height: 14px;
  position: absolute;
  background-color: #3699FF;
  left: -3px;
  top: 3px;
}
.nav_list_main{
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}
.nav_list_item{
  flex: 1;
  text-align: center;
}
.nav_list_item image{
  width: 80rpx;
  height: 80rpx;
  /* margin-bottom: 20rpx; */
}
.btn_list{
  width: 95%;
  background-color: #fff;
  margin: auto;
  /* padding: 0 30rpx; */
  /* margin-top: 30rpx; */
}
.btn_item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding:20rpx 10px;
}
.btn_item:first-child{
  border-bottom: 1px solid #f6f6f6;
}
.btn_item_lf image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: text-top;
  margin-right: 20rpx;
}
.btn_item_rt image{
  width: 10rpx;
  height: 20rpx;
}
.read{
  color: #999999;
  padding-left:10rpx;
  font-size: 12px;
}
.noread{
  color: red;
  padding-left:10rpx;
  font-size: 12px;
}
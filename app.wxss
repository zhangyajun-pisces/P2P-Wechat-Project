button[type=primary] {
 background-color: #3699FF;
}
button[disabled][type=primary] {
  background-color: #cccccc;
  color: #fff;
}

.button-hover[type=primary] {
 background-color: #228df8;
}

.search-result-empty {
  width: 100%;
  height: 100%;
  padding-top: 300rpx;
}

.search-result-empty .icon {
  margin: 0 auto;
  display: block;
  width: 240rpx;
  height: 240rpx;
}

.search-result-empty .text {
  display: block;
  width: 100%;
  height: 40rpx;
  font-size: 28rpx;
  text-align: center;
  color: #999;
}

